{
  "name": "luizalabs-test-back",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "start:dev": "tsx --env-file=.env.development --watch src/Main/index.ts",
    "start:local": "tsx --env-file=.env.local --watch src/Main/index.ts",
    "docs": "tspec generate --outputPath ./src/Main/Routes/Swagger/openapi.json",
    "start": "node build/Main/index.js",
    "build": "tsup src --out-dir build",
    "docker:dev": "docker compose --env-file .env.development up -d",
    "reset:db": "tsx scripts/reset-db.ts",
    "test": "jest --passWithNoTests --runInBand --detectOpenHandles",
    "test:integration": "npm test -- -c jest.integration.config.ts",
    "test:unit": "npm test -- -c jest.unit.config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage -c jest.unit.config.ts && npm test -- --coverage -c jest.integration.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipe-miranda-marreiros/Luizalabs-test-back.git"
  },
